# Environment configuration for the Efference API

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/efference_db

# JWT Configuration
# Prefer JWT_SECRET_KEY to match app.config settings
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration (for S3 uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-efference-uploads-bucket

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO